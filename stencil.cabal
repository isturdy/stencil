name:	       stencil
version:       0.1.0.0
synopsis:      String templating library
category:      Text
homepage:      https://github.com/isturdy/stencil
license:       PublicDomain
license-file:  UNLICENSE
author:        Ian Sturdy <sturdyi12@mail.wlu.edu>
maintainer:    Ian Sturdy <sturdyi12@mail.wlu.edu>
stability:     experimental
tested-with:
	       GHC == 7.6.2
cabal-version: >=1.8
build-type:    Simple

library
  exposed-modules:
    Text.Stencil
    Text.Stencil.Internal
  GHC-Options:
    -Wall

  build-depends:
    base ==4.6.*,
    containers ,
    attoparsec ==0.10.4.*,
    mtl == 2.1.*,
    text ==0.11.2.*,
    xhtml-combinators ==0.2.2

source-repository head
  type:     git
  location: https://github.com/isturdy/stencil

test-suite stencil-tests
  type:			exitcode-stdio-1.0
  hs-source-dirs: 	tests, Text
  main-is: 		Tests.hs

  build-depends:
    stencil,
    base ==4.6.*,
    containers ,
    HUnit ==1.2.5.*,
    text ==0.11.2.*,
    test-framework,
    test-framework-hunit
